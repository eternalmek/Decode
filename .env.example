# OpenAI API Key for message analysis
OPENAI_API_KEY=your_openai_api_key_here

# Stripe Secret Key for subscription payments
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Stripe Price ID (create a recurring price in Stripe for $9.99/month)
STRIPE_PRICE_ID=your_stripe_price_id_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# (Optional) Application URL - used for Stripe redirect URLs
# If not set, the request origin will be used
NEXT_PUBLIC_APP_URL=https://your-app-url.vercel.app
